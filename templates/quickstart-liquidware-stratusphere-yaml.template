    ap-northeast-1:
      StratUXAMI: ami-f290de94
    ap-northeast-2:
      StratUXAMI: ami-8cf15de2
    ap-south-1:
      StratUXAMI: ami-911f46fe
    ap-southeast-1:
      StratUXAMI: ami-f7e8bf8b
    ap-southeast-2:
      StratUXAMI: ami-5c24e43e
    ca-central-1:
      StratUXAMI: ami-2e60e74a
    eu-central-1:
      StratUXAMI: ami-77711818
    eu-west-1:
      StratUXAMI: ami-59480420
    eu-west-2:
